<%= simple_nested_form_for [@plan, @stream] do |f| %>
  <%= f.input :code %>
  <%= f.input :title %>
  <%= f.association :sector, :collection => @plan.sectors %>

  <%= f.fields_for :degrees %>
  <%= f.link_to_add 'добавить квалификацию', :degrees %>

  <%= f.submit 'Сохранить' %>
  <%= link_to "Отмена", :back %>
<% end %>
