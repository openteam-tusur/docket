<h1>Listing streams</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Title</th>
    <th>Duration</th>
    <th>Degree</th>
    <th>Sector</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @streams.each do |stream| %>
  <tr>
    <td><%= stream.code %></td>
    <td><%= stream.title %></td>
    <td><%= stream.duration %></td>
    <td><%= stream.degree %></td>
    <td><%= stream.sector %></td>
    <td><%= link_to 'Show', stream %></td>
    <td><%= link_to 'Edit', edit_stream_path(stream) %></td>
    <td><%= link_to 'Destroy', stream, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

