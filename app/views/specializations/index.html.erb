<h1>Listing specializations</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Passing grade</th>
    <th>Density</th>
    <th>Department</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @specializations.each do |specialization| %>
  <tr>
    <td><%= specialization.title %></td>
    <td><%= specialization.passing_grade %></td>
    <td><%= specialization.density %></td>
    <td><%= specialization.department %></td>
    <td><%= link_to 'Show', specialization %></td>
    <td><%= link_to 'Edit', edit_specialization_path(specialization) %></td>
    <td><%= link_to 'Destroy', specialization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

