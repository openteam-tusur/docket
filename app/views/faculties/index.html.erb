<%= link_to "назад", plan_path(@plan) %>

<h1>Список факультетов</h1>
<%= link_to "добавить факультет", new_plan_faculty_path(@plan) %>

<ul>
  <% @faculties.each do |faculty| %>
    <li>
      <%= faculty.title %>
      <%= link_to 'редактировать', edit_plan_faculty_path(@plan, faculty) %>
      <%= link_to 'удалить', plan_faculty_path(@plan, faculty), :method => :delete, :confirm => 'Вы уверены?' %>
    </li>
  <% end %>
</ul>
